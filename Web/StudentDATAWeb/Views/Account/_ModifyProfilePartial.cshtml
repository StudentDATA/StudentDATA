@model StudentDATAWeb.Models.ProfileModel
@{
    ViewBag.Title = "_ModifyProfilePartial";
}

<h2>Modifier le profil</h2>
@using (Html.BeginForm("ChangeProfile", "Profile"))
{
    @Html.ValidationSummary()
    <fieldset>

        <ul>
            <li>
                @Html.LabelFor(m => m.UserName)<br />
                <p>@ViewBag.UserPseudo</p>
            </li>
            <li>
                @Html.LabelFor(m => m.FirstName)<br />
                @Html.TextBoxFor(m => m.FirstName, new { placeholder = ViewBag.FirstName, name = "FirstName" })
            </li>
            <li>
                @Html.LabelFor(m => m.LastName)<br />
                @Html.TextBoxFor(m => m.LastName, new { placeholder = ViewBag.LastName })
            </li>
            <li>
                @Html.LabelFor(m => m.Semester)<br />
                @Html.DropDownList("SemesterList", (IEnumerable<SelectListItem>)ViewBag.SemesterList, (string)ViewBag.UserSemester, new { id = "SemesterList" });
            </li>
            <li>
                @Html.LabelFor(m => m.StudyField)<br />
                @Html.DropDownList("FieldList", (IEnumerable<SelectListItem>)ViewBag.FieldList, (string)ViewBag.UserField, new { id = "FieldList" })
            </li>

            <li>
                @Html.LabelFor(m => m.ActualActivity)<br />
                @Html.TextBoxFor(m => m.ActualActivity, new { placeholder = ViewBag.UserActivity })
            </li>
            <li>
                @Html.LabelFor(m => m.MailAdress)<br />
                @Html.TextBoxFor(m => m.MailAdress, new { placeholder = ViewBag.MailAdress })
            </li>


            @if (ViewBag.UserPermission == StudentDATAWeb.Models.PermissionEnum.Admin)
            {
                <li>
                    @Html.LabelFor(m => m.Permission)<br />
                    @Html.DropDownList("PermissionList", (IEnumerable<SelectListItem>)ViewBag.PermissionList, "Admin", new { id = "PermissionList" })
                </li>
            }
        </ul>
    </fieldset>
    <input class="btn btn-primary" type="submit" style="margin-left: 40px" value="Enregistrer" />


}