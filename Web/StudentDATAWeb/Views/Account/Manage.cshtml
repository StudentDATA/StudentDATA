@model StudentDATAWeb.Models.LocalPasswordModel
@{
    ViewBag.Title = "Gérer le compte";
}

<hgroup class="title">
    <h1 class="col-md-offset-5">@ViewBag.Title.</h1>
</hgroup>

<p class="message-success col-md-offset-5">@ViewBag.StatusMessage</p>

<p class="col-md-offset-5">Vous êtes connecté en tant que <strong>@User.Identity.Name</strong>.</p>

@if (ViewBag.HasLocalPassword)
{
    @Html.Partial("_ChangePasswordPartial")
}
else
{ 
    @Html.Partial("_SetPasswordPartial")
}

